{
  "name": "@mng/database",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./*": "./src/*.ts"
  },
  "scripts": {
    "format": "oxfmt --check ./src",
    "format:fix": "oxfmt ./src",
    "lint": "oxlint --type-aware ./src",
    "lint:fix": "oxlint --type-aware --fix-dangerously ./src",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config drizzle.config.ts"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.0",
    "drizzle-zod": "^0.8.3",
    "postgres": "^3.4.7",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "drizzle-kit": "^0.31.8",
    "oxfmt": "^0.16.0",
    "oxlint": "^1.31.0"
  }
}
